public class Ejercicio1Deberes{
  public static void main(String[]args){
    int N=3;
    System.out.println("N="+N);
    N=N+77;
    System.out.println("N="+N);
    N=N-3;
    System.out.println("N="+N);
    N=2*N;
    System.out.println("N="+N);
  }
}           
