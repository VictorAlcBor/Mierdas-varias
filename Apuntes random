public class MiSextoEjercicio{
  public static void main(String[]args){
  int x=3, y=5;
  System.out.println("El valor de x="+ x+"e y="+y);
  System.out.println("El valor de x=++y es "+(x=++y));
  x=++y;
  }
}

public class MiSéptimoEjercicio{
  public static void main(String[]args){
  int x=3, y=2;
  System.out.println("El valor de x="+x+" El valor de y="+y);
  y++;
  x--;
  System.out.println("El valor de x="+x+" El valor de y="+y);
  }
}
        
public class MiOctavoEjercicio{
  public static void main(String[]args){
    int numeroA=5, numeroB=3;
    boolean igual,distinto,mayor,menor;
    igual=(numeroA==numeroB);
    distinto=(numeroA!=numeroB);
    menor=(numeroA<numeroB);
    mayor=(numeroA>numeroB);
    System.out.println(distinto+""+igual+""+mayor+""+menor);
  }
}
    
