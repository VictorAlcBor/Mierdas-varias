public class MiCuartoEjercicio {
  public static void main(String[]args){
  int dato=2;
  ++dato;
  System.out.println("Dato es igual a "+ dato);
  dato++;
  System.out.println("Dato es igual a "+ dato);
  }
}

public class MiQuintoEjercicio{
  //Declaración de variables
  public static void main(String[]args){
  int x=3;
  int y=2;
  //La introducción de variables también la puedes expresar como "int x=3, y=2;"
  System.out.println("X es igual a "+ x);
  System.out.println("Y es igual a "+ y);
  x=x+1;
  System.out.println("X es igual a "+ x);
  }
}

