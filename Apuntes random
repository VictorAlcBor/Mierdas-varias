Práctica 23/9/2024
public class ElMayorDeTresNumeros{
  public static void main(String[]args){
    int a=5, b=8, c=10, d=14;
      if((c>a)&&(c>b)&&(c>d)){
      System.out.println("c="+c);
    }
      else if((c<a)&&(a>b)&&(a>d)){
      System.out.println("a="+a);
       }
      else if((c<b)&&(a<b)&&(b>d)){
      System.out.println("b="+b);
       }
       else if((c<d)&&(b<d)&&(d>a)){
      System.out.println("d="+d);
       }
  }
}
