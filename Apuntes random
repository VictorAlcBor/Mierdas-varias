import java.util.Scanner;
public class triangulo{
  public static void main(String[]args){
    Scanner sc=new Scanner(System.in);
    int n=sc.nextInt();
    for(int i=0;i<=n;i++){
      dibujar(i);
    }}
  public static void dibujar(int numero){
    for(int i=1;i<numero;i++){
      if(i==numero){
        System.out.println("*");
      }else{
          System.out.print("*");
        }}}}
        
      
